<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <title>WebXR Demo</title>
    <script
      type="module"
      src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"
    ></script>
  </head>
  <body id="body" style="padding: 0; margin: 0">
    <model-viewer
      id="vehicle"
      class="w-screen h-screen"
      src="models/laptop.glb"
      shadow-intensity="2"
      skybox-height="2.5m"
      autoplay
      max-camera-orbit="auto 90deg auto"
      ar
      camera-controls
    >
      <button class="hidden h-96 w-20" slot="ar-button" id="ar-button">
        View in your space
      </button>

      <!-- <div id="ar-prompt">
        <img src="https://modelviewer.dev/assets/hand.png" />
      </div> -->

      <!-- <button id="ar-failure">AR is not tracking!</button> -->
      <div
        class="controls absolute left-0 right-0 top-2/3 z-10 w-full mx-auto bg-transparent flex justify-center gap-10"
        id="color-controls"
      >
        <button
          class="p-3 border-2 rounded text-white font-semibold bg-black bg-opacity-50 backdrop-blur-sm"
          data-color="#ffffff">Alpina White</button
        >
        <button
          class="p-3 border-2 rounded text-white font-semibold bg-black bg-opacity-50 backdrop-blur-sm"
          data-color="#0000ff">Ugly Blue</button
        >
        <button
          class="p-3 border-2 rounded text-white font-semibold bg-black bg-opacity-50 backdrop-blur-sm"
          data-color="#808080">Space Gray</button
        >
      </div>
    </model-viewer>
  </body>
  <script>
    import { SwipeEventListener } from "swipe-event-listener";

    const { swipeArea } = SwipeEventListener({
      swipeArea: document.querySelector("body")!,
    });

    const arBtn = document.querySelector("#ar-button");

    swipeArea.addEventListener("swipeUp", () => {
      const evt = new MouseEvent("click", {
        bubbles: true,
        cancelable: true,
        view: window,
      });
      arBtn?.dispatchEvent(evt);
    });

    const modelViewerVehicle = document.querySelector("model-viewer#vehicle");

    const colorControls = document.querySelector("#color-controls");

    colorControls?.addEventListener("click", (event: any) => {
      const colorString = (event.target as any).dataset?.color;
      const [first, second] = (modelViewerVehicle as any).model?.materials;

      first.pbrMetallicRoughness.setBaseColorFactor(colorString);
      console.log(first);
      second.pbrMetallicRoughness.setBaseColorFactor(colorString);
    });
  </script>
</html>
